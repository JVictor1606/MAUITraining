<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppShoppingCenter.Views.Cinemas.DetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:media="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:AppShoppingCenter.ViewModels.CinemasVM"
    Title="DetailPage">
    <ContentPage.BindingContext>
        <vm:DetailPageViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <Image
            HorizontalOptions="Center"
            Source="{Binding Movie.Cover}"
            VerticalOptions="Start" />
        <media:MediaElement
            x:Name="player"
            HeightRequest="320"
            ShouldLoopPlayback="True"
            ShouldShowPlaybackControls="False"
            Source="{Binding Movie.Trailer}"
            VerticalOptions="Start" />
        <Image
            x:Name="btnClose"
            Margin="10"
            HorizontalOptions="Start"
            Source="close.png"
            VerticalOptions="Start"
            WidthRequest="29">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCloseGoToMovieListCommand}" CommandParameter="{x:Reference player}" />
            </Image.GestureRecognizers>
        </Image>

        <HorizontalStackLayout
            Margin="0,110,0,0"
            HorizontalOptions="Center"
            VerticalOptions="Start">
            <Image
                x:Name="btn_playpause"
                Margin="10"
                Source="play.png"
                WidthRequest="50">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="PlayPause" />
                </Image.GestureRecognizers>
            </Image>
        </HorizontalStackLayout>
        <Border
            Margin="15"
            Padding="10,0"
            BackgroundColor="#DDB3B3B3"
            HeightRequest="28"
            HorizontalOptions="End"
            StrokeShape="RoundRectangle 30"
            StrokeThickness="0"
            VerticalOptions="Start"
            WidthRequest="82">
            <HorizontalStackLayout Spacing="5">
                <Image Source="clock.png" WidthRequest="19" />
                <Label
                    Style="{StaticResource DurationText}"
                    Text="{Binding Movie.Duration}"
                    TextColor="White"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Border>
        <Border
            x:Name="MovieText"
            Margin="0,260,0,0"
            Padding="50"
            Background="White"
            StrokeShape="RoundRectangle 30,30,0,0"
            StrokeThickness="0">
            <VerticalStackLayout>
                <Label
                    HorizontalOptions="Center"
                    Style="{StaticResource primaryText}"
                    Text="{Binding Movie.Name}"
                    VerticalOptions="Center" />
                <Label
                    Margin="0,35,0,0"
                    HorizontalOptions="Center"
                    Style="{StaticResource TercearyText}"
                    Text="{Binding Movie.Description}"
                    VerticalOptions="Center" />
            </VerticalStackLayout>
        </Border>

    </Grid>
</ContentPage>